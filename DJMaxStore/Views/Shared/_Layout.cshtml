<!DOCTYPE html>
<!--Esta es la pagina que demuestra el marco por defallo del estilo de las paginas, esto aplica a todas las paginas de
    aplicacion-->
<html>
<head>
   
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <!--Se llama los scripts de jquery para el javascript y bootstrap para el css-->
    <script src="@Url.Content("~/Scripts/jquery-2.1.3.min.js")" type="text/javascript"></script>

    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap-theme.css" />

    <style>
        .navbar-right {
            float: right !important;
            margin-right: 15px;
            margin-left: 15px;
        }
    </style>

</head>
<body>
    <div class="navbar navbar-inverse">
        <!--Aqui esta el header del website-->
        <div class="navbar-brand visible-xs">
            <span>DJ Max</span>
            <span>Store</span>
        </div>
        <div id="header" class="navbar-text h1 hidden-xs">
            <span class="hidden-xs">DJ Max Store</span>
        </div>
        <!--La llamada al metodo de accion para donde aparece los articulos seleccionados en la 
            parte derecha de arriba con el subtotal y la llamada al metodo de accion -->
        @Html.Action("CartWidget", "ShoppingCart")
    </div>
    <!--El listado de los enlaces de la aplicacion-->
    <div class="well visible-xs">
        <ul>
            <li class="btn btn-default btn-sm">@Html.ActionLink("Home", "Index", "Home")</li>
            <li class="btn btn-default btn-sm">@Html.ActionLink("Shop", "Index", "Shop")</li>
            <li class="btn btn-default btn-sm">@Html.ActionLink("Cart", "Index", "ShoppingCart")</li>
            <li class="btn btn-default btn-sm">@Html.ActionLink("Login", "Index", "Login")</li>
            <li class="btn btn-default btn-sm">@Html.ActionLink("Register", "Index", "Register")</li>
        </ul>
    </div>

    <div id="main" class="row panel">
        <div class="col-sm-3 well hidden-xs">
            <ul>
                <li class="btn btn-block btn-default btn-lg">@Html.ActionLink("Home", "Index", "Home")</li>
                <li class="btn btn-block btn-default btn-lg">@Html.ActionLink("Shop", "Index", "Shop")</li>
                <li class="btn btn-block btn-default btn-lg">@Html.ActionLink("Cart", "Index", "ShoppingCart")</li>
                <li class="btn btn-block btn-default btn-lg">@Html.ActionLink("Login", "Index", "Login")</li>
                <li class="btn btn-block btn-default btn-lg">@Html.ActionLink("Register", "Index", "Register")</li>
            </ul>
        </div>
        <!--El rendimiento del cuerpo del website, esto ejecuta la aplicacion-->
        <div class="col-xs-12 col-sm-9">
            @RenderBody()
        </div>
    </div>
</body>
</html>
